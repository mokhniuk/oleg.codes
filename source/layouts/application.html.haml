!!!
%html
  %head
    %meta{charset: "utf-8"}
    %meta{content: "IE=edge,chrome=1", http: {equiv: "X-UA-Compatible"}}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1"}
    %title= current_page.data.title || "Oleg Mokhniuk"
    
    = stylesheet_link_tag "application"

    %link{:href => "/assets/images/favicon.png", :rel => "shortcut icon"}

    %meta{:content => "Frontend & User Interface Developer.", :name => "description"}
    %meta{:content => "Oleg Mokhniuk", :name => "author"}
    %meta{:content => "Front-end developer, UI/UX, Interface developer, HTML5, erb, haml, slim, CSS3, Less, Sass, Scss, JavaScript, jQuery, CoffeeScript, Ruby, Rails, Ruby on Rails, Middleman, olegmokhnyuk, olegmokhniuk, Oleg Mokhniuk, Oleg Mokhnyuk, Олег Мохнюк", :name => "keywords"}
    
    %meta{:content => "index, follow", :name => "robots"}
    %meta{:content => "nositelinkssearchbox", :name => "google"}
    %meta{:content => "notranslate", :name => "google"}

    = tag(:meta, property: "og:locale", content: "en_US")
    = tag(:meta, property: "og:site_name", content: "Oleg Codes")
    = tag(:meta, property: "og:url", content: "http://oleg.codes")
    = tag(:meta, property: "og:title", content: "Oleg Mokhniuk. Frontend & User Interface Developer.")
    = tag(:meta, property: "og:description", content: "Personal website of Oleg Mokhniuk, Frontend & User Interface Developer.")
    = tag(:meta, property: "og:image", content: "/assets/images/favicon.png")

    = tag(:meta, property: "og:image:type", content: "image/png")
    = tag(:meta, property: "og:image:width", content: "300")
    = tag(:meta, property: "og:image:height", content: "300")

  %body{class: page_classes}
    %main
      = partial "/views/shared/header"
      = yield
      = partial "/views/shared/footer"

    = javascript_include_tag "https://code.jquery.com/jquery-2.2.3.min.js", "application"